<h1>Welcome back, {{name}}</h1>
<button id="upload_widget" class="cloudinary-button">Add Profile Picture</button>
{{!-- was running into authorization issues/need to pass into a value to then pass into handlebars --}}
<img src="https://res.cloudinary.com/dwe2wo8w5/image/upload/w_200,h_300,c_fill,q_100/{{profile_pic}}">
<h2>Games I Own</h2>
{{#each games}}
    <div class="card">
        <h5>{{name}}</h5>
        <p>{{description}}</p>
        <P>Genre: {{genre}}</P>
        <p>Max players: {{number_players}}</p>
    </div>

{{/each}}

<h2>Add a Game!</h2>
<form action="" id="addGame">
    <input type="text" name="gameName" id="gameName" placeholder="Game Name">
    <input type="text" name="gameDescription" id="gameDescription" placeholder="Game Description">
    <input type="text" name="gameGenre" id="gameGenre" placeholder="Game Genre">
    <input type="number" name="gameNumPlayers" id="gameNumPlayers" placeholder="Max Number of Players">
    <button id="newGameBtn">Add Game!</button>
</form>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script> 
<script src="/js/profile.js"></script>